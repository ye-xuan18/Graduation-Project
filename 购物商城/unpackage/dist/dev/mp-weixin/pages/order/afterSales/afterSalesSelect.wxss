}
.relative {
  position: relative;
}
.wes {
  /* 多出部分用省略号表示 , 用于一行 */
  overflow: hidden;
  word-wrap: normal;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.wes-2 {
  /* 适用于webkit内核和移动端 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.wes-3 {
  /* 适用于webkit内核和移动端 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
page,
.content {
  background: #f8f8f8;
  height: 100%;
}
.after-sales-goods-detail-view {
  background-color: #fff;
}
.after-sales-goods-detail-view .header {
  background-color: #f7f7f7;
  color: #999999;
  font-size: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  line-height: 70rpx;
}
.after-sales-goods-detail-view .header .header-text {
  background-color: #999999;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
}
.after-sales-goods-detail-view .header .seller-name {
  color: #ff3c2a;
}
.after-sales-goods-detail-view .goods-item-view {
  display: flex;
  flex-direction: row;
  padding: 10rpx 30rpx;
  background-color: #eef1f2;
}
.after-sales-goods-detail-view .goods-item-view .goods-info {
  padding-left: 30rpx;
  flex: 1;
}
.after-sales-goods-detail-view .goods-item-view .goods-info .goods-title {
  margin-bottom: 10rpx;
  color: #303133;
}
.after-sales-goods-detail-view .goods-item-view .goods-info .goods-specs {
  font-size: 24rpx;
  margin-bottom: 10rpx;
  color: #cccccc;
}
.after-sales-goods-detail-view .goods-item-view .goods-info .goods-price {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  color: #ff6b35;
}
.after-sales-goods-detail-view .goods-item-view .goods-info .goods-price .num {
  font-size: 24rpx;
  color: #999999;
}
.after-sales-goods-detail-view .goods-item-view .goods-num {
  width: 60rpx;
  color: #ff3c2a;
}
.select-view {
  background-color: #fff;
  margin-top: 20rpx;
}
.select-view .select-cell {
  display: flex;
  align-items: center;
  margin: 0rpx 20rpx;
  line-height: 110rpx;
  border-bottom: 1px solid #f8f8f8;
}
.select-view .select-cell .select-image {
  width: 51rpx;
  height: 110rpx;
  line-height: 110rpx;
  display: flex;
  align-items: center;
}
.select-view .select-cell .right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.select-view .select-cell .right .select-title {
  margin-left: 18rpx;
  color: #666666;
  width: 200rpx;
}
.select-view .select-cell .right .select-sub-title {
  color: #cccccc;
}

